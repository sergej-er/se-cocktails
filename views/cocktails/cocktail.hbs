<div class="flex flex-col max-w-2xl mx-auto md:px-0 p-4">
    <div>
      <img class="w-full rounded-lg" src="data:image/png;base64,{{base64 cocktail.image.data}}" alt="Cocktail image">
    </div>
    <div class="pt-2 pb-4">
        <h3 class="text-lg pb-2">Zutaten</h3>
        <ul>
            {{#each cocktail.ingredients}}
                <li class="inline-block max-w-xs bg-gray-200 dark-mode:bg-pink-dark rounded-full px-2 py-1 mb-2 text-sm font-semibold text-gray-700 dark-mode:text-gray-lightest mr-1">
                    {{this}}
                </li>
            {{/each}}
        </ul>
    </div>    
    <div>
        <h3 class="text-lg block pb-2">Zubereitung</h3>
        <p class="text-justify">
            {{cocktail.recipe}}
        </p>
    </div>
    <div class="py-4 mx-auto">
        <button onclick="window.history.back();">
            <div class="bg-gray-200 dark-mode:bg-pink-lightest text-gray-800 dark-mode:text-gray-dark rounded-full">
                <p class="px-2 py-1 font-bold">ZurÃ¼ck</p>
            </div>
        </button>
    </div>
</div>